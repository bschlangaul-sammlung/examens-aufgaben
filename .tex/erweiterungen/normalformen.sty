Attributhülle]
\RequirePackage{amsmath}
\directlua{
  normalformen = require('lehramt-informatik-normalformen')
}

\def\liTeilen#1{
  \directlua{tex.print(normalformen.teilen('#1'))}
}

\def\liFA#1 > #2 {
  $\{\text{\liTeilen{#1}}\} \rightarrow \{\text{\liTeilen{#2}}\}$
}
