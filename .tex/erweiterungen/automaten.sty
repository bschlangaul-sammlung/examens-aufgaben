\RequirePackage{tikz}
\usetikzlibrary{arrows,automata,positioning}

\directlua{
  automaten = require('lehramt-informatik-automaten')
}

\def\liAutomatenKante#1#2#3#4{
  \path (#1) edge[#4] node{#3} (#2);
}

\ExplSyntaxOn
\def\liKellerUebergang#1{(
  \directlua{automaten.formatiere_uebergang('#1')}
)}
\ExplSyntaxOff

\tikzset{
  li keller knoten/.style={
    text width=2cm,
    align=center,
    font=\footnotesize,
  },
  li automat/.style={
    ->,
    node distance=2cm
  },
  li kellerautomat/.style={
    li automat,
    every edge/.append style={
      every node/.style={
        li keller knoten
      }
    }
  }
}
