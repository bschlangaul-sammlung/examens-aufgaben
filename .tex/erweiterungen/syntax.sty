\def\liJavaCode#1{\mintinline{java}|#1|}

\def\liLatexCode{#1{\mintinline{latex}|#1|}

\NewDocumentCommand{\li@binde@java@ein}{O{} m }{
  \inputminted[#1]{java}{#2.java}
}

\NewDocumentCommand{\liJavaDatei}{O{} m }{
