\RequirePackage{tikz}
\RequirePackage{blkarray}
\usetikzlibrary{arrows.meta}

\def\graph knoten #1 kanten #2 {
  \begin{center}
  \begin{tikzpicture}
  \begin{scope}[every node/.style={circle,draw}]
  #1
  \end{scope}

  \begin{scope}[>={Stealth[black]},
                every node/.style={fill=white,circle},
                every edge/.style={draw=black}]
  #2
  \end{scope}
  \end{tikzpicture}
  \end{center}
}

% \\node\s*\((.*)\)\s*at\s*\((\d+),(\d+)\)\s*\{.*\}\s*;
% \knoten{$1}($2,$3)
\def\knoten#1(#2,#3){
  \node (#1) at (#2,#3) {#1};
}

% \\path \((.*)\) edge node \{(.*)\} \((.*)\);
% \kante($1-$3){$2}
\def\kante(#1-#2)#3{
  \path (#1) edge node {#3} (#2);
}

% \\draw\s*\((.*)\)\s*--\s*\((.*)\);
% Kante ohne Gewicht
\def\kanteO(#1-#2){
  \path (#1) edge (#2);
}

% Kante geRichtet
% \\path \[->\] \((.*)\) edge node \{(.*)\} \((.*)\);
% \kanteR($1>$3){$2}
\def\kanteR(#1>#2)#3{
  \path[->] (#1) edge node {#3} (#2);
}

\def\KANTE(#1-#2)#3{
  \path[ultra thick] (#1) edge node {#3} (#2);
}
