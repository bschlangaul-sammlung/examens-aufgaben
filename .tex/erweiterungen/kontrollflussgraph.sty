\RequirePackage{tikz}
\usetikzlibrary{positioning}
\tikzset{
  kontrollfluss/.style={
    knoten/.style={
      circle,
      draw
    },
    usebox/.style={
      draw,
      rectangle,
      font=\scriptsize,
      anchor=west,
      align=left,
    },
    bedingung/.style={
      midway,
      font=\scriptsize
    },
    knotenbeschriftung/.style={
      draw,
      rectangle,
      midway,
      font=\scriptsize
    },
    every pin/.style={
      draw,
      dotted,
      rectangle,
      pin position=right,
      font=\scriptsize
    },
    every pin edge/.style={
      dotted
    }
  }
}
%    \end{macrocode}

% \begin{macro}{\liAnweisung}
%    \begin{macrocode}
\def\liAnweisung#1(#2,#3){\node[knoten] at (#2,#3) (#1) {#1};}
%    \end{macrocode}
% \end{macro}

% \begin{macro}{\bedingung}
%    \begin{macrocode}
\def\bedingung#1#2{node[bedingung,#1]{[\texttt{#2}]}}
%    \end{macrocode}
% \end{macro}

% \begin{macro}{\KanteWahr}
%    \begin{macrocode}
\def\KanteWahr#1{node[bedingung,#1]{\texttt{true}}}
%    \end{macrocode}
% \end{macro}

% \begin{macro}{\KanteFalsch}
%    \begin{macrocode}
\def\KanteFalsch#1{node[bedingung,#1]{\texttt{false}}}
%    \end{macrocode}
% \end{macro}

% \begin{macro}{\TextzeileKnoten}
%    \begin{macrocode}
\def\TextzeileKnoten#1{\raisebox{-2pt}{\tikz[scale=0.5,transform shape] \node[draw,circle]{#1};}}
%    \end{macrocode}
% \end{macro}

