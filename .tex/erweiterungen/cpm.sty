\def\liCpmEreignis#1(#2,#3){
  \node[circle,draw] (#1) at (#2,#3) {#1};
}
%    \end{macrocode}
% \end{macro}

% \begin{macro}{\liCpmEreignisN}
% N = name
%    \begin{macrocode}
\def\liCpmEreignisN(#1)#2(#3,#4){
  \node[circle,draw] (#1) at (#3,#4) {#2};
}
%    \end{macrocode}
% \end{macro}

% \begin{macro}{\liCpmVorgang}
%    \begin{macrocode}
\def\liCpmVorgang(#1>#2)#3{
  \path[->] (#1) edge node[auto,sloped] {#3} (#2);
}
%    \end{macrocode}
% \end{macro}

% \begin{macro}{\liCpmVORGANG}
