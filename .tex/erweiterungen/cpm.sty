\def\ereignis#1(#2,#3){
  \node[circle,draw] (#1) at (#2,#3) {#1};
}
%    \end{macrocode}
% \end{macro}

% \begin{macro}{\ereignisN}
% N = name
%    \begin{macrocode}
\def\ereignisN(#1)#2(#3,#4){
  \node[circle,draw] (#1) at (#3,#4) {#2};
}
%    \end{macrocode}
% \end{macro}

% \begin{macro}{\vorgang}
%    \begin{macrocode}
\def\vorgang(#1>#2)#3{
  \path[->] (#1) edge node[auto,sloped] {#3} (#2);
}
%    \end{macrocode}
% \end{macro}

% \begin{macro}{\VORGANG}
