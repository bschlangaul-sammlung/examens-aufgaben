% \begin{macro}{\liPseudoUeberschrift}
% Text, der sich wie eine Überschrift verhält.
%    \begin{macrocode}
\newcommand{\liPseudoUeberschrift}[1]{
  \bigskip

  \par
  \noindent
  \textbf{#1}

  \medskip

  \par
  % Keine Einrückung
  \@afterindentfalse
  \@afterheading
}
%    \end{macrocode}
% \end{macro}

