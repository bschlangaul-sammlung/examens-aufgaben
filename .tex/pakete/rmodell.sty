% \begin{macro}{\bRelationMenge}
% \bMakroFaulenzer{r}{liRelationMenge}
% |\bRelationMenge{name}{attribut, attribut}|: Umhüllen der Attribute
% mit geschweiften und dann eckigen Klammern.
%    \begin{macrocode}
\def\bRelationMenge#1#2{
\noindent
#1 : \{[ #2 ]\}
\par
}
%    \end{macrocode}
% \end{macro}

