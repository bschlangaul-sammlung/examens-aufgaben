% \begin{macro}{\liErMpEntity}
% mp = marginpar
% \liLet{e}{liErMpEntity}
%    \begin{macrocode}
\def\liErMpEntity#1{
  \liErEntity{#1}
  \marginpar{
    \liErEntity{\tiny\faSquareO{}~E:~#1}
  }
}
%    \end{macrocode}\Box
% \end{macro}

% \begin{macro}{\liErMpRelationship}
