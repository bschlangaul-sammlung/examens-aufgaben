\def\liErMpRelationship#1{
  \liErRelationship{#1}
  \marginpar{
    \liErRelationship{\tiny\faGg{}~R:~#1}
  }
}
%    \end{macrocode}
% \end{macro}

% \begin{macro}{\liErMpAttribute}
