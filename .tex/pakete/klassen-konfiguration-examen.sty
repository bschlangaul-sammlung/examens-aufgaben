\def\liSetzeExamen#1#2#3{
  \tl_gset:Nn \g_auf_examen_nummer_tl { #1 }
  \tl_gset:Nn \g_auf_examen_jahr_tl { #2 }
  \tl_gset:Nn \g_auf_examen_monat_tl { #3 }
}
%    \end{macrocode}
% \end{macro}

% \begin{macro}{\liSetzeExamenThemaNr}
