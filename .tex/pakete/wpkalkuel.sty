\def\bWpErklaerungVerzweigung{
  $\bWpKalkuelOhneMathe{if~\{~b~\}~then~\{~a1~\}~else~\{~a2~\}}{Q}
  \equiv
  (b \land \bWpKalkuelOhneMathe{a1}{Q})
  \lor
  (\neg b \land \bWpKalkuelOhneMathe{a2}{Q})$
}
