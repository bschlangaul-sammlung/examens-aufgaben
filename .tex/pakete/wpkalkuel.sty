% \begin{macro}{\bWpKalkuel}
% \bMakroFaulenzer{wp}{liWpKalkuel}
%    \begin{macrocode}
\def\bWpKalkuelOhneMathe#1#2{
  \text{wp}(\texttt{\scriptsize"#1"},\thinspace #2)
}
\def\bWpKalkuel#1#2{
  \ifmmode
    \bWpKalkuelOhneMathe{#1}{#2}
  \else
    $\bWpKalkuelOhneMathe{#1}{#2}$
  \fi
}
%    \end{macrocode}
% \end{macro}

