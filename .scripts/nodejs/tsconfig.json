{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "downlevelIteration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string"],
    "allowJs": true
  },
  "exclude": ["node_modules"]
}
